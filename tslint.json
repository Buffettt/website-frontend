{
    "extends": [
      "tslint-config-prettier",
      "tslint-react"
    ],
    "jsRules": {
      "no-empty": true
    },
    "rules": {
      "adjacent-overload-signatures": true,
      "member-access": true,
      "no-any": true,
      "no-empty-interface": {
        "severity": "warning"
      },
      "no-import-side-effect": [true, {
        "ignore-module": "(\\.html|\\.css|\\.s(c|a)ss|\\.less)$"
      }],
      "no-inferrable-types": {
        "severity": "warning"
      },
      "no-internal-module": true,
      // "no-magic-numbers": {
      //   "severity": "warning",
      //   "options": [-1, 0, 1, 100, 200, 201, 202, 204, 301, 302, 303, 304, 307, 308, 400, 401, 403, 404, 405, 406, 408, 410, 500, 501, 502, 503, 504]
      // },
      "no-namespace": [true, "allow-declarations"],
      "no-non-null-assertion": {
        "severity": "warning"
      },
      "no-parameter-reassignment": {
        "severity": "warning"
      },
      "no-reference": true,
      "no-unnecessary-type-assertion": {
        "severity": "warning"
      },
      "no-var-requires": true,
      "only-arrow-functions": true,
      "prefer-for-of": true,
      "promise-function-async": true,
      "unified-signatures": {
        "severity": "warning"
      },
      "await-promise": true,
      "ban-comma-operator": true,
      "label-position": true,
      "no-arg": true,
      "no-bitwise": {
        "severity": "warning"
      },
      "no-conditional-assignment": true,
      "no-construct": true,
      "no-debugger": true,
      "no-duplicate-super": true,
      "no-duplicate-switch-case": true,
      "no-dynamic-delete": true,
      "no-empty": [true, "allow-empty-catch"],
      "no-eval": true,
      "no-for-in-array": true,
      "no-inferred-empty-object-type": {
        "severity": "warning"
      },
      "no-invalid-template-strings": {
        "severity": "warning"
      },
      "no-invalid-this": true,
      "no-null-keyword": {
        "severity": "warning"
      },
      "no-object-literal-type-assertion": true,
      "no-return-await": true,
      "no-shadowed-variable": {
        "severity": "warning"
      },
      "no-sparse-arrays": true,
      "no-string-literal": true,
      "no-string-throw": {
        "severity": "warning"
      },
      "no-this-assignment": {
        "severity": "warning"
      },
      "no-unnecessary-class": true,
      "no-unsafe-finally": true,
      "no-unused-expression": {
        "severity": "warning"
      },
      "no-var-keyword": true,
      "no-void-expression": {
        "severity": "warning"
      },
      "prefer-conditional-expression": {
        "severity": "warning"
      },
      "prefer-object-spread": {
        "severity": "warning"
      },
      "restrict-plus-operands": true,
      "strict-type-predicates": true,
      "triple-equals": true,
      "use-default-type-parameter": true,
      "use-isnan": true,
      "cyclomatic-complexity": {
        "severity": "warning"
      },
      "deprecation": true,
      "eofline": {
        "severity": "warning"
      },
      "indent": [true, "spaces", 2],
      "max-classes-per-file": {
        "severity": "warning",
        "options": 1
      },
      "no-duplicate-imports": true,
      "prefer-const": true,
      "prefer-readonly": {
        "severity": "warning"
      },
      "trailing-comma": true,
      "array-type": {
        "severity": "warning",
        "options": "array-simple"
      },
      "arrow-return-shorthand": true,
      "binary-expression-operand-order": {
        "severity": "warning"
      },
      "callable-types": true,
      "class-name": true,
      "comment-format": {
        "severity": "warning",
        "options": "check-space"
      },
      "encoding": true,
      "import-spacing": {
        "severity": "warning"
      },
      "interface-name": [true, "always-prefix"],
      "newline-before-return": {
        "severity": "warning"
      },
      "no-angle-bracket-type-assertion": true,
      "no-boolean-literal-compare": true,
      "no-consecutive-blank-lines": {
        "severity": "warning"
      },
      "no-unnecessary-callback-wrapper": true,
      "no-unnecessary-initializer": true,
      "no-unnecessary-qualifier": true,
      "number-literal-format": {
        "severity": "warning"
      },
      "object-literal-key-quotes": {
        "severity": "warning",
        "options": "as-needed"
      },
      "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
      "one-variable-per-declaration": {
        "severity": "warning"
      },
      "ordered-imports": false,
      "prefer-method-signature": true,
      "prefer-switch": true,
      "prefer-template": {
        "severity": "warning",
        "options": "allow-single-concat"
      },
      "prefer-while": true,
      "quotemark": {
        "severity": "warning",
        "options": [
          "single",
          "jsx-double",
          "avoid-template",
          "avoid-escape"
        ]
      },
      "semicolon": {
        "severity": "warning"
      },
      "space-before-function-paren": {
        "severity": "warning",
        "options": {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always",
          "method": "never",
          "constructor": "never"
        }
      },
      "variable-name": {
        "severity": "warning",
        "options": [
          "check-format",
          "allow-leading-underscore",
          "allow-pascal-case",
          "ban-keywords"
        ]
      },
      "whitespace": {
        "severity": "warning",
        "options": [
          "check-branch",
          "check-decl",
          "check-operator",
          "check-module",
          "check-separator",
          "check-rest-spread",
          "check-type",
          "check-typecast",
          "check-type-operator",
          "check-preblock"
        ]
      },
      "jsx-boolean-value": false,
      "jsx-no-multiline-js": false,
      "jsx-no-lambda": {
        "severity": "warning"
      }
    },
    "linterOptions": {
      "exclude": [
        "node_modules/**/*.ts"
      ]
    }
  }